<!DOCTYPE html>
<html>
  <head>
    <title> {{title}} Study Groups </title>
		<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/main.css" rel="stylesheet"/>
    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="/js/scroll.js"></script>
    <script src="/js/groups.js"></script>
  </head>

  <body>
      <div class="groupsPage page">

          <div class="header">
            <div class="bar collapse">
              <label class="title"> Your Study Groups </label>
            </div>
          </div>

          <main>
            <div class="groups-list wrap flex">
              {{#if groups}}
                {{#each groups}}
                  <a class="item" href="group/{{id}}"> 
                    <div class="circles fill">
                      {{#each members}}
                        <span class="circle"></span>
                      {{/each}}
                    </div>
                    <label> {{name}} </label>
                  </a>
                {{/each}}
              {{else}}
                <label> You arenâ€™t in any study groups yet. Click the add button to find groups... </label>
              {{/if}}
            </div>

            <div class="menu">
              <a href="/class/{{url}}/groups/create" class="dark-btn light"> Create New Study Group </a>
              <a href="/class/{{url}}/groups/join" class="dark-btn light"> Find Study Group </a>
            </div>
            <button class="floating-btn add-btn" id="add-btn"> + </button>
          </main>

          <nav>
            <a href="/class/{{url}}"> <span class="home-btn icon"> </span> Home </a>
            <a href="/class/{{url}}/groups" class="selected"> <span class="group-btn icon"> </span> Groups </a>
            <a href="/class/{{url}}/list"> <span class="class-btn icon"> </span> Class </a>
          </nav>

      </div>
  </body>
</html>